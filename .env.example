# =============================================================================
# Nickberg Terminal - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# =============================================================================
# SCRAPER CONFIGURATION
# =============================================================================

# Scraper run mode: "once", "continuous", or "schedule"
# - once: Run a single scraping cycle and exit
# - continuous: Run scraping cycles in a loop with SCRAPER_INTERVAL_SECONDS delay
# - schedule: Run based on configuration in settings.yaml
SCRAPER_MODE=continuous

# Interval between scraper cycles in seconds (default: 900 = 15 minutes)
# Only used when SCRAPER_MODE=continuous
SCRAPER_INTERVAL_SECONDS=900

# =============================================================================
# TELEGRAM NOTIFICATIONS (Optional)
# =============================================================================
# To get these values:
# 1. Create a bot via @BotFather on Telegram
# 2. Get the bot token from BotFather
# 3. Add the bot to a group/channel or message it directly
# 4. Get chat ID from https://api.telegram.org/bot<TOKEN>/getUpdates

# Enable Telegram notifications (true/false)
NEWS_BOT_TELEGRAM_ENABLED=false

# Telegram bot token from @BotFather
# Format: 1234567890:ABCdefGHIjklMNOpqrSTUvwxYZ123456789
NEWS_BOT_TELEGRAM_TOKEN=

# Telegram chat ID to send alerts to
# Can be a user ID (positive) or group/channel ID (negative)
NEWS_BOT_TELEGRAM_CHAT_ID=

# =============================================================================
# WEBHOOK NOTIFICATIONS (Optional)
# =============================================================================
# For integrating with external systems (Slack, Discord, custom endpoints)

# Enable webhook notifications (true/false)
NEWS_BOT_WEBHOOK_ENABLED=false

# Webhook URL to POST alerts to
# The bot will send JSON payloads to this URL
NEWS_BOT_WEBHOOK_URL=

# =============================================================================
# WEB DASHBOARD CONFIGURATION
# =============================================================================

# Flask environment: "production" or "development"
# - production: Uses Gunicorn, no debug mode
# - development: Uses Flask dev server with debug mode
FLASK_ENV=production

# Port for the web dashboard (default: 5000)
WEB_PORT=5000

# Number of Gunicorn workers for production mode (default: 4)
# Recommended: (2 x CPU cores) + 1
WEB_WORKERS=4

# =============================================================================
# API AUTHENTICATION
# =============================================================================
# Protects the web dashboard API endpoints

# API key for authenticating requests to the web dashboard
# If not set, API endpoints will be accessible without authentication
# Generate a secure key: openssl rand -hex 32
NICKBERG_API_KEY=

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
NICKBERG_LOG_LEVEL=INFO

# =============================================================================
# DATABASE (Advanced)
# =============================================================================
# Usually you don't need to change these

# Path to the SQLite database file (inside container)
# NICKBERG_DB_PATH=/app/data/nickberg.db

# Number of days to retain articles (default: 30)
# NICKBERG_RETENTION_DAYS=30

# =============================================================================
# DOCKER COMPOSE OVERRIDES (Advanced)
# =============================================================================
# These are used by docker-compose.yml

# Resource limits
# SCRAPER_CPU_LIMIT=1.0
# SCRAPER_MEMORY_LIMIT=512M
# WEB_CPU_LIMIT=0.5
# WEB_MEMORY_LIMIT=256M
